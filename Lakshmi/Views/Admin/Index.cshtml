@model IEnumerable<Lakshmi.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Страницы пользователей</h2>

<form style="display: flex; flex-direction:column; align-items: flex-start;" asp-controller="Home" asp-action="FindUser">
    <h2>Страницы пользователей</h2>
    <p>
        <input type="text" name="SearchName" value="@ViewBag.Name"> - Поиск по имени пользователя
    </p>
    <p>
        <input type="text" name="SearchEmail" value="@ViewBag.Email"> - Поиск по почте пользователя
    </p>
    <p>
        <input type="text" name="SearchId" value="@ViewBag.Id"> - Поиск по Id пользователя
    </p>
    <p><input type="submit" value="Filter" /></p>
</form>

<div style="display:flex; font-size: 1.5em; width: 100%; height: 60px;  border-top: 1px solid #5f5f5f; justify-content: space-between;">

    <strong style="font-size: 1em; width:25%;">
        Name:
    </strong>
    <strong style="font-size: 1em; width:25%;">
        Email:
    </strong>
    <p style="font-size: 1em; width:25%;"></p>
    <strong style="font-size: 1em; width:25%;">
        Id:
    </strong>
</div>
@foreach (var item in Model)
{
<div style="display:flex; font-size: 1.1em; width: 100%; height: 60px; border-top: 1px solid #5f5f5f; justify-content: flex-start;">
    <strong style="font-size: 1em; width:25%;">@Html.DisplayFor(modelItem => item.NickName):</strong>
    <strong style=" width:25%;">@Html.DisplayFor(modelItem => item.Email):</strong>
    <p style="width:25%; font-size: 1.1em;">
        <a href="@Url.Action("GetInfo","Admin", (new { id = item.Id }))"> Cтатус аккаунта</a> <br />
        <a href="@Url.Action("MyPage", "Editor", new { id = item.Id})">Cтраница юзера</a>
    </p>
    <strong style=" width:25%;">@Html.DisplayFor(modelItem => item.Id):</strong>
</div>
}