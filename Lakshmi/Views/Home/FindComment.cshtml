@using Microsoft.AspNet.Identity
@model IEnumerable<Lakshmi.Models.Comment>

@section link {
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
}

<form style="display: flex; flex-direction:column; align-items: flex-start;" asp-controller="Home" asp-action="FindComment">
    <h2>Список коментариев</h2>
    <p>
        <input type="text" name="SearchRecord" value="@ViewBag.Record"> - коментарий
    </p>
    <p><input type="submit" value="Filter" /></p>
</form>

@foreach (var comment in Model)
{<div style="display: flex; align-items: center; justify-content: space-between; border-top: 1px solid #5f5f5f; border-bottom: 1px solid #5f5f5f; height: 250px;">
     
         
         <p style="width: 60%; background: yellow; border: 1px solid #5f5f5f; font-size: 1.5em;"> @comment.Record </p>
         <div>
             <p>Оставил коментарий:</p>
             <a style="text-align: center;" href="@Url.Action("MyPage", "Editor", new { id = comment.ApplicationUserId })">
                 <strong>@comment.ApplicationUser.NickName:</strong>
             </a>
         </div>
    <div>
        <p>Под этим фото</p>
        <a class="viewDialog" data-dialog-title="@Html.DisplayFor(ModelItem => comment.ApplicationUser.NickName)" href="@Url.Action("PhotoInfo", "Home", new { id = comment.PhotoId })">
            <div class="pho-3-to">
                @Html.Raw("<img class=\"photo\" style='' src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(comment.Photo.Image) + "\" />")
            </div>
        </a>
    </div>
</div>
    }


    @section scripts {
        <script src='@Url.Content("~/Scripts/jquery-3.4.1.min.js")' type="text/javascript"></script>
        <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.js")' type="text/javascript"></script>
        <script>
            $(document).ready(function () {

                $.ajaxSetup({ cache: false });

                $(".viewDialog").on("click", function (e) {
                    e.preventDefault();

                    $("<div></div>")
                        .addClass("dialog")
                        .appendTo("body")
                        .dialog({
                            title: $(this).attr("data-dialog-title"),
                            close: function () { $(this).remove() },
                            modal: true
                        })
                        .load(this.href);
                });
            });
        </script>
    }
